# =============================================================================
# ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
## IMPORTANT
## - Do NOT put real secrets in this file.
## - Copy to `.env.local` for local dev and fill in real values.
## - Use hosting provider secrets and GitHub Actions secrets for non-local envs.
# =============================================================================

# Supabase Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL="https://your-project-ref.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key-here"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key-here"

# Buildium Integration (Optional - for API integration)
BUILDIUM_BASE_URL="https://apisandbox.buildium.com/v1"
BUILDIUM_CLIENT_ID="your-client-id"
BUILDIUM_CLIENT_SECRET="your-client-secret"
BUILDIUM_API_KEY="your-api-key"
BUILDIUM_WEBHOOK_SECRET="your-webhook-secret"

# App Configuration (Required)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Optional: Sentry Monitoring
SENTRY_DSN=""
SENTRY_TRACES_SAMPLE_RATE="0.1"
NEXT_PUBLIC_SENTRY_DSN=""
NEXT_PUBLIC_SENTRY_TRACES_SAMPLE_RATE="0.1"

# Optional: Centralized Logging
# Override log level (fatal,error,warn,info,debug,trace)
LOG_LEVEL="info"

# Optional: OpenTelemetry (Tracing)
# Base collector endpoint (no trailing slash), e.g. https://collector.example.com
OTEL_EXPORTER_OTLP_ENDPOINT=""
# Optional auth headers for the collector, e.g. "authorization=Bearer YOUR_TOKEN"
OTEL_EXPORTER_OTLP_HEADERS=""
# Optional service name override
OTEL_SERVICE_NAME="property-manager"

# Optional: Email SMTP (if using)
EMAIL_SERVER_HOST="smtp.example.com"
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER="user@example.com"
EMAIL_SERVER_PASSWORD="app-password-here"
EMAIL_FROM="noreply@example.com"

# Optional: Google Maps API key (restrict by HTTP referrer/IP)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=""

